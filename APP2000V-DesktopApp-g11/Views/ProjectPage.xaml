<assets:AnimatedUserControl
             x:Class="APP2000V_DesktopApp_g11.Views.ProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APP2000V_DesktopApp_g11.Views"
             xmlns:assets="clr-namespace:APP2000V_DesktopApp_g11.Assets"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1620">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border 
            Grid.Row="0"
            Grid.ColumnSpan="2"
            BorderThickness="0,0,0,1" 
            BorderBrush="Black"
            />
        <TextBlock
            x:Name="DisplayProjectName"
            Grid.ColumnSpan="2"
            FontSize="30"
            />

        <StackPanel 
            Grid.Column="0"
            Grid.Row="1"
            Background="AliceBlue">

            <TextBlock
                Text="Backlog"
                FontSize="30"
                Margin="15, 0, 0, 30"/>
            <ScrollViewer
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                Margin="15, 0, 15, 0"
                Height="950">
                <StackPanel>

                    <StackPanel
                        x:Name="CreateTaskPanel"
                        Margin="0, 0, 0, 30">
                        <TextBox
                            x:Name="CreateTaskTb"
                            Text="Create new task..."
                            Foreground="Gray"
                            Background="White"
                            FontSize="28"
                            Padding="30, 20, 0, 25" 
                            GotFocus="CreateListTb_GotFocus"
                            />
                        <Button 
                            x:Name="CreateTaskBtn"
                            Visibility="Collapsed"
                            Height="50" 
                            Content="Create Task"
                            FontSize="28"
                            Click="CreateTaskBtn_Click" />
                    </StackPanel>
                    <StackPanel
                        x:Name="BacklogPanel">
                       
                    </StackPanel>
                    

                </StackPanel>
            </ScrollViewer>
        </StackPanel>
        <Popup 
            Grid.Row="1"
            Grid.ColumnSpan="2"
            x:Name="TestPopup"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="300"
            Height="300" 
            Placement="Center"
            
            >
            <StackPanel 
                Background="Red">
                <TextBlock
                    Text="Test popup"
                    FontSize="28"/>
            </StackPanel>
        </Popup>

        <ScrollViewer
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Grid.Column="1"
            Grid.Row="1">
            <StackPanel
                Orientation="Horizontal">
                <StackPanel
                    x:Name="ListPanel"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal"
                    >
                    <StackPanel
                        Width="350"
                        Margin="30, 30, 0, 30"
                        Background="AliceBlue">
                        <Border BorderBrush="Gray"
                                BorderThickness="0, 0, 0, 1">
                            <TextBlock
                                Text="Liste"
                                FontSize="28"
                                FontWeight="Bold"
                                Margin="15"/>
                        </Border>
                        <ScrollViewer
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Button
                        Content="This is a task"
                        Background="White"
                        FontSize="28"
                        Padding="30, 20, 0, 25" 
                            Margin="15, 15, 15, 0"
                        />
                                <Button
                        Content="This is a task"
                        Background="White"
                        FontSize="28"
                        Padding="30, 20, 0, 25" 
                            Margin="15, 15, 15, 15"
                        />
                            </StackPanel>
                        </ScrollViewer>
                        
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    HorizontalAlignment="Left"
                    x:Name="CreateListPanel"
                    Margin="30, 30, 0, 30"
                    Width="350"
                    >
                    <TextBox
                        x:Name="CreateListTb"
                        Text="Create new list..."
                        Foreground="Gray"
                        Background="White"
                        FontSize="28"
                        Padding="30, 20, 0, 25" 
                        GotFocus="CreateListTb_GotFocus"
                        />
                    <Button 
                        x:Name="CreateListBtn"
                        Visibility="Visible"
                        Height="50"
                        Content="Create List"
                        FontSize="28"
                        Click="CreateListBtn_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
    
    
</assets:AnimatedUserControl>
