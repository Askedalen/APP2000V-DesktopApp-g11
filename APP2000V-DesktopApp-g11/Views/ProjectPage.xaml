<assets:AnimatedUserControl
             x:Class="APP2000V_DesktopApp_g11.Views.ProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APP2000V_DesktopApp_g11.Views"
             xmlns:assets="clr-namespace:APP2000V_DesktopApp_g11.Assets"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1620">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border 
            Grid.Row="0"
            Grid.ColumnSpan="2"
            BorderThickness="0,1,0,1" 
            BorderBrush="Black"
            />
        <TextBlock
            x:Name="DisplayProjectName"
            Grid.ColumnSpan="2"
            FontSize="30"
            />

        <StackPanel 
            Grid.Column="0"
            Grid.Row="1"
            Background="AliceBlue">

            <TextBlock
                Text="Backlog"
                FontSize="30"
                Margin="15, 0, 0, 30"/>
            <ScrollViewer
                Margin="15, 0, 15, 0"
                Height="950">
                <StackPanel
                    x:Name="BacklogPanel">
                    
                    <TextBox
                        x:Name="CreateTaskTb"
                        Text="Create new task..."
                        Foreground="Gray"
                        Background="White"
                        FontSize="28"
                        Margin="0, 0, 0, 30"
                        Padding="30, 20, 0, 25" 
                        GotFocus="CreateTaskTb_GotFocus"
                        />
                    <Button 
                        x:Name="CreateTaskBtn"
                        Visibility="Collapsed"
                        Height="50" 
                        Content="Create Task"
                        FontSize="28"
                        Click="CreateTaskBtn_Click" 
                        RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <TranslateTransform Y="-30"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </StackPanel>

    </Grid>
</assets:AnimatedUserControl>
