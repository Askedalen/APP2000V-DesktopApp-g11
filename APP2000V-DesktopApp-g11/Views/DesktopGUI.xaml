<Window x:Class="APP2000V_DesktopApp_g11.Views.DesktopGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APP2000V_DesktopApp_g11.Views"
        mc:Ignorable="d"
        Title="DesktopGUI" 
        Width="1920" Height="1080"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Sidebar" Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="1">

            <Image 
                x:Name="logoImage"
                Grid.Row="0"
                Width="200" Height="200" 
                Margin="50,0,50,10" />
            <TextBlock 
                Grid.Row="0"
                Margin="0, 0, 0, 100"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Text="Wørkflow"
                FontSize="24"
                FontFamily="Verdana" Cursor="None" />

            <Button 
                Height="60" 
                Content="Dashboard" 
                FontSize="36" Click="Button_Click"/>
            <Button 
                Height="60" 
                Content="Projects" 
                FontSize="36"/>
            <Button 
                Height="60" 
                Content="Employees" 
                FontSize="36"/>
            <Button 
                Height="60" 
                Content="Archive" 
                FontSize="36"/>

            <TextBlock 
                x:Name="Tekstblokk"
                Text="Dette er en test" FontSize="24"/>
        </StackPanel>
    </Grid>

</Window>
